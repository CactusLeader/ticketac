<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" 
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans&display=swap" rel="stylesheet">  
    <link rel="stylesheet" href="./stylesheets/style.css">
    <title>Ticketac - Homepage</title>
</head>
<body>
    <!-- Header  -->
    <%- include('header') %>
    <!-- Fin du header -->

    <div class="container-fluid">


        <div class='row d-flex flex-column align-items-center'>
            <div class="col-4 uptext">
                <p>My last trips :</p>
            </div>
        </div>

        <div class="card mb-3">
            <div class="card-body">
              <div class="table-responsive">
                <table id="product-list" class="table table-bordered" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th>N°</th>
                      <th>Journey</th>
                      <th>Date</th>
                      <th>Departure Time</th>
                      <th>Price</th>
                    </tr>
                    </thead>
                    <tbody>
                        <% let totalCmd = 0 %>
                        <% for (let i = 0; i < dataTrain.length; i++) { %>
                        <% let numero = 1; %>
                        <tr>
                            <td><%= numero + i %></td>
                            <td><%= dataTrain[i].departure %> / <%= dataTrain[i].arrival %></td>
                            <td><%= dataTrain[i].date %></td>
                            <td><%= dataTrain[i].departureTime %></td>
                            <td><%= dataTrain[i].price %>€</td>
                        </tr>
                        <% totalCmd += Number(dataTrain[i].price) %>
                        <% } %>
                    </tbody>
                    <tr>
                        <th>Total</th>
                        <th><%= totalCmd %>€</th>
                    </tr>
                </table>

                <!-- Button trigger modal -->
                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                    Confirm
                </button>
                
                <!-- Modal -->
                <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                    <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="staticBackdropLabel">Résumé de commande</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <table id="product-list" class="table table-bordered" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>N°</th>
                                        <th>Journey</th>
                                        <th>Date</th>
                                        <th>Departure Time</th>
                                        <th>Price</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% 
                                    totalCmd = 0; 
                                    let trainIds = [];
                                    %>
                                    <% for (let i = 0; i < dataTrain.length; i++) { %>
                                    <% let numero = 1; %>
                                    <tr>
                                        <td><%= numero + i %></td>
                                        <td><%= dataTrain[i].departure %> / <%= dataTrain[i].arrival %></td>
                                        <td><%= dataTrain[i].date %></td>
                                        <td><%= dataTrain[i].departureTime %></td>
                                        <td><%= dataTrain[i].price %>€</td>
                                    </tr>
                                    <% totalCmd += Number(dataTrain[i].price) %>
                                    <% trainIds.push(dataTrain[i].idtrain)%>
                                    <% } %>
                                </tbody>
                                <tr>
                                    <th>Total</th>
                                    <th><%= totalCmd %>€</th>
                                </tr>
                            </table>
                        </div>
                        <% trainIds = JSON.stringify(trainIds) %>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Modifier</button>
                            <button type="button" class="btn btn-danger" type="submit"><a href="/confirmation?idtrain=<%=trainIds%>">Valider</a></button>
                        </div>
                    </div>
                    </div>
                </div>
    </div>

    <!-- footer -->
    <%- include('footer') %>
    <!--  -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" 
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>